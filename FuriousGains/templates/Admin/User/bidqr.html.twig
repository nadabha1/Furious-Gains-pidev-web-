
{% extends 'dashboard.html.twig' %}
{% block title %}
    <h1 class="h1">Genrate Qr </h1>
{% endblock %}
{% block container %}

    <div class="example-wrapper">

        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}
                {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Recherche'}}) }}
                <hr>
                <button type="submit" class="btn btn-success btn-block">Recherche</button>
                {{ form_end(form) }}
            </div>
            <div class="col-md-6">
                {% if qrCode %}
                    <img src="{{ qrCode }}" alt="qr-code">
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
