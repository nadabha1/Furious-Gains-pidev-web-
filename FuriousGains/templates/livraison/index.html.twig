{% extends 'contact.html.twig' %}

{% block title %}Livraison index{% endblock %}
{% block container %}
{% endblock %}
{% block features %}
    <h1>Livraison index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdLivraison</th>
                <th>DateLivraison</th>
                <th>StatutLivraison</th>
                <th>AdresseLivraison</th>
                <th>MontantPaiement</th>
                <th>ModeLivraison</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livraison in livraisons %}
            <tr>
                <td>{{ livraison.idLivraison }}</td>
                <td>{{ livraison.dateLivraison ? livraison.dateLivraison|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ livraison.statutLivraison }}</td>
                <td>{{ livraison.adresseLivraison }}</td>
                <td>{{ livraison.montantPaiement }}</td>
                <td>{{ livraison.modeLivraison }}</td>
                <td>
                    <a href="{{ path('app_livraison_show', {'idLivraison': livraison.idLivraison}) }}">show</a>
                    <a href="{{ path('app_livraison_edit', {'idLivraison': livraison.idLivraison}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_livraison_new') }}">Create new</a>
{% endblock %}
