{% extends 'Adminbase.html.twig' %}

{% block title %}New Evenement{% endblock %}

{% block body %}
<main class="main-content mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">
                        <div class="card card-plain mt-8">
                            <div class="card-header pb-0 text-left bg-transparent">
                                <h3 class="font-weight-bolder text-info text-gradient">Add New Event</h3>
                                <p class="mb-0">Enter your event details</p>
                            </div>
                            <div class="card-body">
                              <form method="post" action="{{ path('app_evenement_new', {'user_id': user_id}) }}">
    {{ form_widget(form._token) }}
    <div class="mb-3">
        <label for="nomEvent" class="form-label">Event Name</label>
        {{ form_widget(form.nomEvent, {'attr': {'class': 'form-control', 'placeholder': 'Event Name'}}) }}
        {% if form_errors(form.nomEvent) %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form.nomEvent) }}
            </div>
        {% endif %}
    </div>
    <div class="mb-3">
        <label for="lieuEvent" class="form-label">Location</label>
        {{ form_widget(form.lieuEvent, {'attr': {'class': 'form-control', 'placeholder': 'Location'}}) }}
        {% if form_errors(form.lieuEvent) %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form.lieuEvent) }}
            </div>
        {% endif %}
    </div>
    <div class="mb-3">
        <label for="prixEvent" class="form-label">Price</label>
        {{ form_widget(form.prixEvent, {'attr': {'class': 'form-control', 'placeholder': 'Price'}}) }}
        {% if form_errors(form.prixEvent) %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form.prixEvent) }}
            </div>
        {% endif %}
    </div>
    <div class="mb-3">
        <label for="nbParticipation" class="form-label">Number of Participants</label>
        {{ form_widget(form.nbParticipation, {'attr': {'class': 'form-control', 'placeholder': 'Number of Participants'}}) }}
        {% if form_errors(form.nbParticipation) %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form.nbParticipation) }}
            </div>
        {% endif %}
    </div>
    <div class="mb-3">
        <label for="dateEvent" class="form-label">Date</label>
        {{ form_widget(form.dateEvent, {'attr': {'class': 'form-control', 'placeholder': 'Date'}}) }}
        {% if form_errors(form.dateEvent) %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form.dateEvent) }}
            </div>
        {% endif %}
    </div>
    <div class="mb-3">
        <label for="heureEvent" class="form-label">Time</label>
        {{ form_widget(form.heureEvent, {'attr': {'class': 'form-control', 'placeholder': 'Time'}}) }}
        {% if form_errors(form.heureEvent) %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form.heureEvent) }}
            </div>
        {% endif %}
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description', 'rows': 4}}) }}
        {% if form_errors(form.description) %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form.description) }}
            </div>
        {% endif %}
    </div>
    <div class="text-center">
        <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">Submit Event</button>
    </div>
</form>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n8">
                            <div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6" style="background-image:url('../assets/img/curved-images/curved6.jpg')"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
